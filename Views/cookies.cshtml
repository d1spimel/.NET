@{
    ViewData["Title"] = "Cookies Example";
}

<h1>Cookies Example</h1>

<form method="post" action="/cookies/setCookies">
    <div class="form-group">
        @if (ViewBag.CookieValue != null) {
             <label for="value">Значення:  @ViewBag.CookieValue</label>
        } else {
           <label for="value">Значення: -.</label>
        }
       
        <input type="text" id="value" name="value" class="form-control" required />
    </div>
    <div class="form-group">
        <label for="expirationDate">Кiнцева дата та час:</label>
        <input type="datetime-local" id="expirationDate" name="expirationDate" class="form-control" required />
    </div>
    <button type="submit" class="btn btn-primary">Відправити</button>
</form>
