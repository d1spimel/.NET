@model AspNetMVC.Models.FileViewModel

<h1>Завантаження файлу</h1>

@using (Html.BeginForm("DownloadFile", "File", FormMethod.Post))
{
    <div class="form-group">
        <label for="firstName">Ім'я:</label>
        <input type="text" name="firstName" id="firstName" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="lastName">Прізвище:</label>
        <input type="text" name="lastName" id="lastName" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="fileName">Назва файлу:</label>
        <input type="text" name="fileName" id="fileName" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Продовжити</button>
}
