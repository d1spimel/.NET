<h2>Order Summary</h2>

<style>
    .table {
        width: 100%;
        border-collapse: collapse;
        border: 2px solid #333;
        margin-top: 20px;
    }

    th, td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    th {
        background-color: #f2f2f2;
    }

    tr:nth-child(even) {
        background-color: #f2f2f2;
    }

    tr:nth-child(odd) {
        background-color: #ffffff;
    }
</style>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Count</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model.Pizza)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Count</td>
            </tr>
        }
    </tbody>
</table>
